<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
    <% if not brewery.active %>
      retired
    <% end %>
  </h2>

  <p>
    <i>Established in <%= brewery.year %>.</i>
  </p>

  <p>
    <strong>Number of beers:</strong>
    <%= brewery.beers.count %>
  </p>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>
</div>

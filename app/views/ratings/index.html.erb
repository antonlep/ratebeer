<h2>Ratings</h2>

<h3>Best breweries</h3>
<%= render "top", top: @top_breweries %>

<h3>Best beers</h3>
<%= render "top", top: @top_beers %>

<h3>Best styles</h3>
<%= render "top", top: @top_styles %>

<h3>Most active users</h3>
<ul>
  <% @active_users.each do |user| %>
    <li> <%= user.username %> <%= user.ratings.length %> ratings </li>
  <% end %>
</ul>

<h3>Recent ratings</h3>
<ul>
  <% @recent_ratings.each do |rating| %>
    <li> <%= rating %> <%= link_to rating.user.username, rating.user %> <%= rating.created_at %> </li>
  <% end %>
</ul>

<p>Number of ratings: <%= @ratings.count %></p>




<p><%= link_to "New rating", new_rating_path %></p>

<p style="color: green"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<p>
  <% if @user.ratings.empty? %>
    Has not made any ratings yet!
  <% else %>
    Has made <%= pluralize @user.ratings.count, "rating" %>, average rating <%= @user.average_rating %>
  <% end %>
</p>
<h2>ratings:</h2>
<ul>
  <% if not @user.ratings.empty? %>
    <% @user.ratings.each do |rating| %>
      <li> <%= rating %> <%= button_to 'delete', rating, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } %> </li>
    <% end %>
  <% end %>
</ul>
<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
